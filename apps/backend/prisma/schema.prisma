datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  created_at DateTime @default(now())

  bookings Booking[]
}

model Booking {
  id           Int       @id @default(autoincrement())
  user_id      Int
  car_name     String
  days         Int
  rent_per_day Int
  status       String
  created_at   DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
